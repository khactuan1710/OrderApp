<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".feature.changinfo.ChangeInfoActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dimen_80dp"
            android:layout_marginBottom="@dimen/dimen_120dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/dimen_10dp"
                android:orientation="vertical">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/lo_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxStrokeColor="@color/color_default"
                    app:boxStrokeWidthFocused="0dp"
                    app:boxStrokeWidth="0dp"
                    app:hintTextColor="@color/color_default"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/ed_name"
                        app:boxStrokeWidthFocused="0dp"
                        app:boxStrokeWidth="0dp"
                        app:boxStrokeColor="@color/color_default"
                        android:layout_width="match_parent"
                        android:background="@drawable/border_default_app"
                        android:layout_height="wrap_content"
                        android:hint="Tên"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/lo_sdt"
                    android:layout_marginTop="@dimen/dimen_8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxStrokeColor="@color/color_default"
                    app:boxStrokeWidthFocused="0dp"
                    app:boxStrokeWidth="0dp"
                    app:hintTextColor="@color/color_default"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/ed_sdt"
                        app:boxStrokeWidthFocused="0dp"
                        app:boxStrokeWidth="0dp"
                        app:boxStrokeColor="@color/color_default"
                        android:layout_width="match_parent"
                        android:background="@drawable/border_default_app"
                        android:layout_height="wrap_content"
                        android:hint="Điện thoại"/>
                </com.google.android.material.textfield.TextInputLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chọn Địa chỉ mới"
                    android:textSize="@dimen/text_size_16sp"
                    android:textColor="@color/color_44494D"
                    android:fontFamily="@font/sf_pro_text_bold"
                    android:layout_marginTop="@dimen/dimen_15dp"/>

                <RelativeLayout
                    android:id="@+id/btn_tinh"
                    android:layout_marginTop="@dimen/dimen_8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dimen_16dp"
                    android:background="@drawable/border_item_new">
                    <TextView
                        android:id="@+id/tv_tinh"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/text_size_15sp"
                        android:textColor="@color/color_44494D"
                        android:text="Chọn tỉnh/Thành phố*"
                        />
                    <ImageView
                        android:layout_centerVertical="true"
                        android:layout_width="20dp"
                        android:layout_height="@dimen/dimen_20dp"
                        android:src="@drawable/down_arr_new"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>
                <TextView
                    android:visibility="gone"
                    android:id="@+id/rq_tinh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bắt buộc chọn"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/color_EE0033"
                    android:textSize="@dimen/text_size_12sp"
                    android:layout_marginTop="@dimen/margin_5"/>
                <RelativeLayout
                    android:id="@+id/btn_quan"
                    android:layout_marginTop="@dimen/dimen_8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dimen_16dp"
                    android:background="@drawable/border_item_new">
                    <TextView
                        android:id="@+id/tv_quan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/text_size_15sp"
                        android:textColor="@color/color_44494D"
                        android:text="Chọn Huyện/Quận*"
                        />
                    <ImageView
                        android:layout_centerVertical="true"
                        android:layout_width="20dp"
                        android:layout_height="@dimen/dimen_20dp"
                        android:src="@drawable/down_arr_new"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>
                <TextView
                    android:visibility="gone"
                    android:id="@+id/rq_quan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bắt buộc chọn"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/color_EE0033"
                    android:textSize="@dimen/text_size_12sp"
                    android:layout_marginTop="@dimen/margin_5"/>
                <RelativeLayout
                    android:id="@+id/btn_thon"
                    android:layout_marginTop="@dimen/dimen_8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dimen_16dp"
                    android:background="@drawable/border_item_new">
                    <TextView
                        android:id="@+id/tv_thon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/text_size_15sp"
                        android:textColor="@color/color_44494D"
                        android:text="Chọn Phường/Xã*"
                        />
                    <ImageView
                        android:layout_centerVertical="true"
                        android:layout_width="20dp"
                        android:layout_height="@dimen/dimen_20dp"
                        android:src="@drawable/down_arr_new"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>
                <TextView
                    android:visibility="gone"
                    android:id="@+id/rq_thon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bắt buộc chọn"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/color_EE0033"
                    android:textSize="@dimen/text_size_12sp"
                    android:layout_marginTop="@dimen/margin_5"/>
                <RelativeLayout
                    android:id="@+id/btn_mota"
                    android:layout_marginTop="@dimen/dimen_8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dimen_16dp"
                    android:background="@drawable/border_item_new">
                    <EditText
                        android:id="@+id/ed_mota"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/text_size_15sp"
                        android:textColor="@color/color_44494D"
                        android:hint="Nhập địa chỉ chi tiết*(Tên phố, số nhà)"
                        android:background="@null"
                        />
                </RelativeLayout>
                <TextView
                    android:visibility="gone"
                    android:id="@+id/rq_mota"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bắt buộc chọn"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/color_EE0033"
                    android:textSize="@dimen/text_size_12sp"
                    android:layout_marginTop="@dimen/margin_5"/>

                <TextView
                    android:id="@+id/tv_address_new"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phường 2, Dịch vọng hậu, Cầu Giáy, Hà Nội"
                    android:textSize="@dimen/text_size_16sp"
                    android:textColor="@color/color_44494D"
                    android:fontFamily="@font/sf_pro_text_bold"
                    android:layout_marginTop="@dimen/dimen_15dp"/>

            </LinearLayout>



        </androidx.core.widget.NestedScrollView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/dimen_15dp"
            android:background="@drawable/subtract"
            >
            <ImageView
                android:padding="@dimen/dimen_10dp"
                android:id="@+id/ic_back"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_back_v4"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center_vertical"/>
            <TextView

                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="@dimen/dimen_20dp"
                android:fontFamily="@font/sf_pro_text_medium"
                android:text="Sửa thông tin"/>
        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            app:cardCornerRadius="@dimen/dimen_16dp"
            app:cardElevation="@dimen/dimen_16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="@dimen/dimen_16dp"
                android:paddingEnd="@dimen/dimen_16dp">


                <Button
                    android:id="@+id/btn_save"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_marginBottom="@dimen/dimen_16dp"
                    android:background="@drawable/border_item_button_cancel"
                    android:text="Lưu"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="@dimen/dimen_16dp"
                    app:backgroundTint="@null" />

                <View
                    android:layout_width="@dimen/dimen_200dp"
                    android:layout_height="@dimen/dimen_5dp"
                    android:layout_gravity="center"
                    android:background="@drawable/custom_line" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </RelativeLayout>

</LinearLayout>